<h1 class="current-category"><%= params[:category] %></h1>
<% if @books.present? %>
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-md-3">
        <a href="/books/<%= book.id %>">
          <%= image_tag book.book_img.url(:book_index), class: "book-index" %>
        </a>
      </div>
    <% end %>
    <%= will_paginate @books %>
  </div>
<% else %>
  <h1> There are no books currently, maybe update soon </h1>
<% end %>
